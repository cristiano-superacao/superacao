{
    "name": "Superação - App de Produtividade com IA",
    "short_name": "Superação",
    "description": "Supere seus limites com o poder da IA! Transforme suas tarefas em um jogo viciante e alcance seus objetivos.",
    "start_url": "/app/",
    "display": "standalone",
    "orientation": "portrait-primary",
    "theme_color": "#4CAF50",
    "background_color": "#ffffff",
    "scope": "/app/",
    "lang": "pt-BR",
    "dir": "ltr",
    "categories": ["productivity", "lifestyle", "health", "education"],

    "icons": [
        {
            "src": "assets/icon-192.svg",
            "sizes": "192x192",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        },
        {
            "src": "assets/icon-512.svg",
            "sizes": "512x512",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        },
        {
            "src": "../favicon-32x32.png",
            "sizes": "32x32",
            "type": "image/png",
            "purpose": "any"
        },
        {
            "src": "../favicon-16x16.png",
            "sizes": "16x16",
            "type": "image/png",
            "purpose": "any"
        }
    ],
    "shortcuts": [
        {
            "name": "Ver Ranking",
            "short_name": "Ranking", 
            "description": "Verificar sua posição no ranking global",
            "url": "/app/?tab=ranking"
        },
        {
            "name": "Coach IA",
            "short_name": "Coach",
            "description": "Conversar com seu coach pessoal de IA", 
            "url": "/app/?tab=ai-coach"
        },
        {
            "name": "Meu Perfil",
            "short_name": "Perfil",
            "description": "Ver estatísticas e conquistas pessoais",
            "url": "/app/?tab=profile"
        }
    ],
    "related_applications": [
        {
            "platform": "play",
            "url": "https://play.google.com/store/apps/details?id=com.superacao.app",
            "id": "com.superacao.app"
        },
        {
            "platform": "itunes",
            "url": "https://apps.apple.com/app/superacao/id123456789"
        }
    ],
    "prefer_related_applications": false,
    "share_target": {
        "action": "/app/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "protocol_handlers": [
        {
            "protocol": "web+superacao",
            "url": "/app/?action=%s"
        }
    ],
    "file_handlers": [
        {
            "action": "/app/import",
            "accept": {
                "application/json": [".json"],
                "text/csv": [".csv"]
            }
        }
    ],
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "handle_links": "preferred",
    "edge_side_panel": {
        "preferred_width": 400
    },
    "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
    "note_taking": {
        "new_note_url": "/app/?action=new-note"
    }
}
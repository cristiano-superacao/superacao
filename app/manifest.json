    "related_applications": [
        {
            "platform": "play",
            "url": "https://play.google.com/store/apps/details?id=com.superacao.app",
            "id": "com.superacao.app"
        },
        {
            "platform": "itunes",
            "url": "https://apps.apple.com/app/superacao/id123456789"
        }
    ],
    "prefer_related_applications": false,
    "share_target": {
        "action": "/app/share",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url"
        }
    },
    "protocol_handlers": [
        {
            "protocol": "superacao",
            "url": "/app/?action=%s"
        }
    ],
    "file_handlers": [
        {
            "action": "/app/import",
            "accept": {
                "application/json": [".json"],
                "text/csv": [".csv"]
            }
        }
    ],
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "handle_links": "preferred",
    "edge_side_panel": {
        "preferred_width": 400
    },
    "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
    "note_taking": {
        "new_note_url": "/app/?action=new-note"
    }
}